<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="authentic_lite6_gripper">

  <xacro:macro name="authentic_lite6_gripper_urdf" params="prefix:='' attach_to:='' attach_xyz:='0 0 0' attach_rpy:='0 0 0'">
    
    <!-- Attachment joint to parent link -->
    <xacro:unless value="${attach_to == ''}">
      <joint name="${prefix}gripper_fix" type="fixed">
        <parent link="${attach_to}"/>
        <child link="${prefix}lite6_gripper_base_link"/>
        <origin xyz="${attach_xyz}" rpy="${attach_rpy}"/>
      </joint>
    </xacro:unless>

    <!-- Main gripper base link -->
    <link name="${prefix}lite6_gripper_base_link">
      <inertial>
        <origin xyz="0.0 0.0 0.030" rpy="0 0 0" />
        <mass value="0.28" />
        <inertia
          ixx="0.00047106" ixy="3.9292E-07" ixz="2.6537E-06"
          iyy="0.00033072" iyz="-1.0975E-05" izz="0.00025642" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lite6xlerobi/meshes/gripper/lite/visual/gripper_lite.stl"/>
        </geometry>
        <material name="${prefix}White">
          <color rgba="0.9 0.9 0.9 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lite6xlerobi/meshes/gripper/lite/collision/gripper_lite.stl"/>
        </geometry>
      </collision>
    </link>

    <!-- Left finger link -->
    <link name="${prefix}lite6_left_finger">
      <inertial>
        <origin xyz="0 0 0.01" rpy="0 0 0" />
        <mass value="0.01" />
        <inertia
          ixx="1.0E-06" ixy="0" ixz="0"
          iyy="1.0E-06" iyz="0" izz="1.0E-06" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.008 0.004 0.02"/>
        </geometry>
        <material name="${prefix}Silver">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.008 0.004 0.02"/>
        </geometry>
      </collision>
    </link>

    <!-- Left finger joint (master joint) -->
    <joint name="${prefix}lite6_left_finger_joint" type="prismatic">
      <origin xyz="0 0.010 0.065" rpy="0 0 0" />
      <parent link="${prefix}lite6_gripper_base_link" />
      <child link="${prefix}lite6_left_finger" />
      <axis xyz="0 1 0" />
      <limit lower="0" upper="0.015" effort="50" velocity="0.1" />
      <!-- Realistische Dynamik für bessere Simulation -->
      <dynamics damping="1.0" friction="0.1"/>
    </joint>

    <!-- Right finger link -->
    <link name="${prefix}lite6_right_finger">
      <inertial>
        <origin xyz="0 0 0.01" rpy="0 0 0" />
        <mass value="0.01" />
        <inertia
          ixx="1.0E-06" ixy="0" ixz="0"
          iyy="1.0E-06" iyz="0" izz="1.0E-06" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.008 0.004 0.02"/>
        </geometry>
        <material name="${prefix}Silver">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.008 0.004 0.02"/>
        </geometry>
      </collision>
    </link>

    <!-- Right finger joint (mimic joint) -->
    <joint name="${prefix}lite6_right_finger_joint" type="prismatic">
      <origin xyz="0 -0.010 0.065" rpy="0 0 0" />
      <parent link="${prefix}lite6_gripper_base_link" />
      <child link="${prefix}lite6_right_finger" />
      <axis xyz="0 -1 0" />
      <limit lower="0" upper="0.015" effort="50" velocity="0.1" />
      <mimic joint="${prefix}lite6_left_finger_joint" multiplier="1.0" offset="0.0"/>
      <!-- Realistische Dynamik für bessere Simulation -->
      <dynamics damping="1.0" friction="0.1"/>
    </joint>



    <!-- TCP (Tool Center Point) link -->
    <link name="${prefix}link_tcp" />

    <joint name="${prefix}joint_tcp" type="fixed">
      <origin xyz="0 0 0.0836" rpy="0 0 0" />
      <parent link="${prefix}lite6_gripper_base_link" />
      <child link="${prefix}link_tcp" />
    </joint>

    <!-- Gripper wird über das Haupt xArm Hardware-Interface gesteuert -->
    <!-- Keine separaten ros2_control-Definitionen nötig -->

  </xacro:macro>
</robot>